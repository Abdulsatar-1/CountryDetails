<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AasiaActivity">


    <TextView
        android:id="@+id/txtRanska"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtKreikka"
        android:layout_below="@+id/btRanska"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Ranska"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btSuomi"
        android:layout_width="198dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btEspanja"
        android:background="@drawable/flag_fin" />

    <Button
        android:id="@+id/btRanska"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_above="@+id/txtSaksa"
        android:layout_alignParentEnd="true"
        android:background="@drawable/flag_france" />

    <TextView
        android:id="@+id/txtSuomi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btSuomi"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Suomi"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/txtItalia"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btItalia"
        android:layout_marginStart="0dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Italia"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btItalia"
        android:layout_width="198dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/flag_italy" />

    <Button
        android:id="@+id/btKreikka"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/flag_greece" />

    <TextView
        android:id="@+id/txtKreikka"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btItalia"
        android:layout_marginEnd="82dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Kreikka"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/txtSaksa"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Saksa"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btSaksa"
        android:layout_width="198dp"
        android:layout_height="105dp"
        android:layout_above="@+id/txtSaksa"
        android:layout_alignParentStart="true"
        android:background="@drawable/flag_germany" />

    <Button
        android:id="@+id/btEspanja"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_above="@+id/txtEspanja"
        android:layout_alignParentEnd="true"
        android:background="@drawable/flag_spain" />

    <TextView
        android:id="@+id/txtEspanja"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btItalia"
        android:layout_alignStart="@+id/txtKreikka"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:text="Espanja"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textAasia"
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Eurooppa"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold" />


</RelativeLayout>